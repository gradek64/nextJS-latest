{
  "name": "gm-basket-wishlist-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:habitat": "BRAND=habitat npm run dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "--------- TESTS ----------------------": "",
    "test": "jest -u",
    "test:watch": "jest --watch",
    "e2e": "npx playwright test --config e2e/playwright.config.ts",
    "e2e:tags": "npx playwright test --config e2e/playwright.config.ts --grep $npm_config_grep",
    "e2e:ui": "npx playwright test --ui --config e2e/playwright.config.ts",
    "--------- LINTING ----------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.{json,md,mjs,js,jsx,ts,tsx,css}\"",
    "prepare": "husky",
    "prepush": "npm run test && npm run build && npm run bundlewatch && exit 0",
    "bundlewatch": "bundlewatch"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "styled-components": "5.3.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2"
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/static/chunks/app/(ui)/wishlist/page*.js",
        "maxSize": "2KB"
      },
      {
        "path": ".next/static/chunks/app/page*.js",
        "maxSize": "400B"
      },
      {
        "path": ".next/static/chunks/pages/_app*.js",
        "maxSize": "200B"
      }
    ]
  },
  "dependencies": {
    "@sainsburys-tech/bolt": "^13.35.0",
    "@sainsburys-tech/bolt-footer": "^4.23.9",
    "@sainsburys-tech/bolt-icons": "^0.22.0",
    "@sainsburys-tech/bolt-vocab-provider": "^0.4.0",
    "@sainsburys-tech/boltui-polyfills": "^3.0.18",
    "@sainsburys-tech/boltui-style": "^11.2.4",
    "@sainsburys-tech/design-tokens": "^3.1.0",
    "@sainsburys-tech/fable": "^4.10.0",
    "@sainsburys-tech/grid": "^3.1.3",
    "@sainsburys-tech/icons": "^3.3.2",
    "@sainsburys-tech/style": "^3.2.0",
    "@vercel/flags": "^3.1.1",
    "lowdb": "^7.0.1",
    "next": "15.2.4",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.8.0",
    "pino": "^9.7.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "styled-components": "5.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@next/bundle-analyzer": "^15.3.5",
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/next": "^9.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/styled-components": "^5.1.34",
    "bundlewatch": "^0.4.1",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-yaml": "^1.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.28.0"
  },
  "lint-staged": {
    "./src/**/*.{js,ts,tsx,css,json,md}": "prettier --write",
    "./src/**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'",
      "eslint --fix"
    ]
  }
}
