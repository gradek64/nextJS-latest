{
  "name": "gm-basket-wishlist-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:habitat": "BRAND=habitat npm run dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "postinstall": "npm run setup:prompt --silent || echo '⚠️  Customs library setup skipped. Run: npm run setup:full'",
    "--------- CUSTOMS LIBRARY ----------------------": "",
    "setup:customs": "bash scripts/setup-customs-library.sh",
    "setup:full": "bash scripts/setup-customs-library.sh && bash scripts/fix-customs-types.sh",
    "setup:prompt": "bash scripts/setup-full-with-prompt.sh",
    "fix:customs-types": "bash scripts/fix-customs-types.sh",
    "--------- TESTS ----------------------": "",
    "test": "jest -u",
    "test:watch": "jest --watch",
    "e2e": "npx playwright test --config e2e/playwright.config.ts",
    "e2e:tags": "npx playwright test --config e2e/playwright.config.ts --grep $npm_config_grep",
    "e2e:ui": "npx playwright test --ui --config e2e/playwright.config.ts",
    "--------- LINTING ----------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.{json,md,mjs,js,jsx,ts,tsx,css}\"",
    "prepare": "husky",
    "prepush": "npm run test && npm run build && npm run bundlewatch && exit 0",
    "bundlewatch": "bundlewatch"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "styled-components": "5.3.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2"
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/static/chunks/app/(ui)/wishlist/page*.js",
        "maxSize": "2KB"
      },
      {
        "path": ".next/static/chunks/app/page*.js",
        "maxSize": "400B"
      },
      {
        "path": ".next/static/chunks/pages/_app*.js",
        "maxSize": "200B"
      }
    ]
  },
  "dependencies": {
    "@sainsburys-tech/design-tokens": "file:.yalc/@sainsburys-tech/design-tokens",
    "@sainsburys-tech/grid": "file:.yalc/@sainsburys-tech/grid",
    "@sainsburys-tech/icons": "file:.yalc/@sainsburys-tech/icons",
    "@sainsburys-tech/style": "file:.yalc/@sainsburys-tech/style",
    "@vercel/flags": "^3.1.1",
    "lowdb": "^7.0.1",
    "next": "15.2.4",
    "openapi-fetch": "^0.13.5",
    "openapi-typescript": "^7.6.1",
    "pino": "^9.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "styled-components": "5.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@next/bundle-analyzer": "^15.2.3",
    "@playwright/test": "^1.51.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/next": "^9.0.0",
    "@types/node": "^22.13.13",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/styled-components": "^5.1.34",
    "bundlewatch": "^0.4.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-yaml": "^1.0.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "lint-staged": {
    "./src/**/*.{js,ts,tsx,css,json,md}": "prettier --write",
    "./src/**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'",
      "eslint --fix"
    ]
  }
}
